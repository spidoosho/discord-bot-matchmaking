html
  head
    title Leadeboard
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
  body
    .container
      h1.text-center.my-4 Leaderboard
      if leaderboard == null
        p Leaderboard not found.
      else if leaderboard.length == 0
        p Leaderboard is empty.
      else
        table.table.table-striped.table-bordered(style='width:100%', border='1')
          thead 
            tr
              th Username
              th Elo
              th Games won
              th Games lost
          tbody
            each player in leaderboard
              tr
                td #{player.displayName.S}
                td #{player.elo.N}
                td #{player.gamesWon.N}
                td #{player.gamesLost.N}